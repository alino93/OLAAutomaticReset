[Desktop Entry]
Type=Application
Name=LXInput autostart
Comment=Setup keyboard and mouse using settings done in LXInput
NoDisplay=true
Exec=sh -c 'xset m 20/10 10 r rate 500 30 b on; xinput --set-prop "pointer:Logitech M185" "libinput Accel Speed" -0.500000; xinput --set-prop "pointer:Logitech MX Anywhere 2S" "libinput Accel Speed" -0.500000; xinput --set-prop "pointer:Logitech MX Keys" "libinput Accel Speed" -0.500000'
NotShowIn=GNOME;KDE;XFCE;
